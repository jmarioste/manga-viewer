{
  "name": "baijiMangaViewer",
  "version": "0.1.0",
  "description": "A modern manga viewer inspired by Quivi that uses Material Design",
  "scripts": {
    "start": "electron ./app/",
    "build-renderer": "node --trace-warnings -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.renderer.dev.js  --progress --profile --colors --watch",
    "build-main": "node --trace-warnings -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.main.prod.js  --progress --profile --colors",
    "postinstall": "install-app-deps",
    "pack": "build --dir",
    "dist": "build",
    "build-win32": "build --win --ia32",
    "build-win64": "build --win --x64"
  },
  "repository": "https://github.com/shizkun/manga-viewer",
  "keywords": [
    "Manga Viewer",
    "quick",
    "Baiji"
  ],
  "build": {
    "appId": "com.baiji-manga-viewer",    
    "copyright": "Copyright Â© 2017 Jasser Mark Arioste",
    "win": {
      "target": "nsis"      
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory" : true,
      "runAfterFinish": false,
      "installerIcon": "build/icon.ico",
      "installerHeader": "build/installerHeader.bmp",
      "license": "LICENSE.md",
      "deleteAppDataOnUninstall": true
    }
  },
  "author": "Jasser Mark Arioste",
  "license": "GPL-3.0",
  "devDependencies": {
    "babel-core": "6.24.0",
    "babel-loader": "6.4.1",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-plugin-dynamic-import-webpack": "1.0.1",
    "babel-preset-env": "1.3.2",
    "babel-preset-stage-0": "6.24.1",
    "babel-register": "6.24.1",
    "css-loader": "0.28.0",
    "electron": "1.6.7",
    "electron-builder": "17.3.1",
    "electron-rebuild": "1.5.7",
    "extract-zip": "=1.6.0",
    "file-loader": "0.11.1",
    "html-loader": "0.4.5",
    "imports-loader": "0.7.1",
    "resolve-url-loader": "2.0.2",
    "sass-loader": "6.0.3",
    "source-map-loader": "0.2.1",
    "style-loader": "0.16.1",
    "url-loader": "0.5.8",
    "webpack": "2.3.2",
    "webpack-target-electron-renderer": "0.4.0",
    "node-sass": "4.5.2"
  }
}
