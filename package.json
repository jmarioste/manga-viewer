{
  "scripts": {
    "start": "electron ./app",
    "build-renderer": "webpack --watch",
    "build-renderer-prod": "webpack",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder .",
    "dist": "electron-builder",
    "build-all": "electron-builder --win --x64 --ia32 --mac --linux",
    "build-win32": "electron-builder --win --ia32",
    "build-win64": "electron-builder --win --x64",
    "test": "mocha ./app/**/*.spec.js --recursive",
    "test-dev": "mocha ./app/**/*.spec.js --recursive --watch",
    "e2e": "npm run build-renderer-prod  && mocha e2e",
    "publish": "electron-builder --win --x64 -p always"
  },
  "repository": "https://github.com/jmarioste/manga-viewer",
  "keywords": [
    "Manga Viewer",
    "quick",
    "Baiji"
  ],
  "build": {
    "appId": "com.baiji-manga-viewer",
    "productName": "Baiji Manga Viewer",
    "copyright": "Copyright Â© 2017 Jasser Mark Arioste",
    "asar": true,
    "files": [
      "bundle/",
      "node_modules/",
      "main-process/",
      "common/",
      "main.js",
      "index.html",
      "package.json",
      "icon.png"
    ],
    "fileAssociations": [
      {
        "ext": [
          ".rar",
          ".zip"
        ],
        "description": "Manga file format",
        "role": "none",
        "icon": "./build/icon.ico"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Graphics",
      "asar": false,
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "./icons/"
    },
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "win": {
      "target": "nsis",
      "asarUnpack": [
        "UnRAR.exe"
      ],
      "files": [
        "bundle/",
        "node_modules/",
        "main-process/",
        "common/",
        "main.js",
        "index.html",
        "package.json",
        "icon.png",
        "UnRAR.exe"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "installerIcon": "./build/icon.ico",
      "license": "LICENSE.md",
      "deleteAppDataOnUninstall": true
    }
  },
  "author": "Jasser Mark Arioste <jassermark.arioste@gmail.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.3.2",
    "babel-register": "^6.26.0",
    "chai": "^3.5.0",
    "chai-as-promised": "6.0.0",
    "cross-env": "5.0.0",
    "css-loader": "0.28.0",
    "electron": "1.8.6",
    "electron-builder": "latest",
    "electron-connect": "0.6.1",
    "electron-rebuild": "^1.7.3",
    "extract-zip": "=1.6.0",
    "file-loader": "0.11.1",
    "gulp": "3.9.1",
    "html-loader": "0.4.5",
    "http-server": "0.10.0",
    "imports-loader": "0.7.1",
    "less": "2.7.2",
    "mocha": "^3.3.0",
    "node-sass": "^4.5.2",
    "resolve-url-loader": "2.0.2",
    "rimraf": "2.6.1",
    "sass-loader": "^6.0.3",
    "sinon": "^2.2.0",
    "sinon-chai": "^2.10.0",
    "source-map-loader": "0.2.1",
    "spectron": "3.6.4",
    "style-loader": "0.16.1",
    "uglifyjs-webpack-plugin": "^0.4.3",
    "url-loader": "0.5.8",
    "webpack": "2.3.2",
    "webpack-target-electron-renderer": "0.4.0"
  }
}